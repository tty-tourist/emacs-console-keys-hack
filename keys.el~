;;; TTY Key hacks
;;; The translations with the settings below fit the adjustments to the key table.
(define-key function-key-map "\e[25~" [(control return)])
(define-key input-decode-map "\e[26~" [(f14)])
(define-key input-decode-map "\e[28~" [(f15)])
